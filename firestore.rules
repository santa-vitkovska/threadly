rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow read for other users (for displaying names in chats)
      allow read: if request.auth != null;
    }
    
    // Chats collection
    match /chats/{chatId} {
      // Allow read/write if user is a member of the chat
      allow read, write: if request.auth != null && request.auth.uid in resource.data.members;
      // Allow create if user is in the members array
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is a member of the parent chat
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        // Allow create if user is a member and is the sender
        allow create: if request.auth != null 
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members
          && request.resource.data.senderId == request.auth.uid;
        // Allow update only to mark as read (updating readBy field)
        allow update: if request.auth != null 
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy']);
      }
      
      // Typing subcollection
      match /typing/{uid} {
        // Allow read if user is a member of the parent chat
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        // Allow write (create/delete) only for own typing indicator
        allow write: if request.auth != null 
          && request.auth.uid == uid
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

